{
  "name": "@animo-id/mdoc",
  "description": "Animo Mdoc and MDL",
  "author": "Martin Auer",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "version": "0.2.38",
  "files": [
    "dist"
  ],
  "dependencies": {
    "compare-versions": "^6.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.9",
    "@noble/curves": "^1.6.0",
    "@panva/hkdf": "^1.2.1",
    "@peculiar/x509": "^1.12.3",
    "@types/node": "^20.14.11",
    "buffer-tag": "^1.0.2",
    "jose": "^5.9.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/animo/mdoc"
  },
  "keywords": [
    "mdl",
    "iso-18013-5",
    "iso-18013-7",
    "m-doc",
    "m-doc-cbor",
    "m-doc-cbor-parser",
    "m-doc-cbor-validator",
    "m-doc-cbor-encoder",
    "m-doc-cbor-decoder",
    "m-doc-cbor-iso-18013-5",
    "m-doc-cbor-iso-18013-5-parser",
    "m-doc-cbor-iso-18013-5-validator",
    "m-doc-cbor-iso-18013-5-encoder",
    "m-doc-cbor-iso-18013-5-decoder"
  ],
  "scripts": {
    "types:check": "tsc --noEmit",
    "style:check": "biome check --unsafe",
    "style:fix": "biome check --write --unsafe",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
    "test": "vitest",
    "release": "pnpm build && pnpm changeset publish --no-git-tag",
    "changeset-version": "pnpm changeset version && pnpm style:fix"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts"
}